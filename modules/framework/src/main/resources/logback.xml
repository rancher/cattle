<configuration>
    <!-- THIS LINE IS IMPORTANT, DON'T DELETE, ALSO DON'T PUT THIS IN YOUR logback.xml : CATTLE_DEFAULT_LOGBACK_XML -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
            by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${logback.bootstrap.level:-INFO}">
        <appender-ref ref="STDOUT" />
    </root>

    <logger level="INFO" name="ConsoleStatus" additivity="false" >
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>