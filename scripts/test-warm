#!/bin/bash
set -e

cd $(dirname $0)

pull()
{
    # Don't pull if we have the image locally
    if docker inspect $1 >/dev/null 2>&1; then
        return 0
    fi

    docker pull $1
}

pull rancher/agent
for i in agent.instance.image bootstrap.required.image; do
    pull $(grep $i ../resources/content/cattle-global.properties | cut -f2 -d=)
done
