{
    "resourceFields": {
        "name": {
            "unique": true,
            "required": true
        },
        "isHostPath": {
            "type": "boolean",
            "default": false
        },
        "driver": {
            "type": "string",
            "required": true
        },
        "driverOpts": {
            "type": "map[string]",
            "nullable": true
        },
        "capabilities" : {
            "type" : "array[string]",
            "nullable" : true
        }
    },
    "resourceActions": {
        "snapshot": {
            "input": "volumeSnapshotInput",
            "output": "snapshot",
            "attributes": {
                "states": ["active", "inactive"]
            }
        },
        "reverttosnapshot": {
            "input": "revertToSnapshotInput",
            "output": "volume"
        }
    }
}
