{
    "resourceFields": {
        "environment": {
            "type": "map[string]",
            "create": true
        },
        "command": {
            "type": "array[string]",
            "nullable": true,
            "create": true
        },
        "workingDir": {
            "type": "string",
            "create": true,
            "nullable": true,
            "minLength": 1
        },
        "hostname": {
            "type": "string",
            "create": true,
            "nullable": true,
            "minLength": 1
        },
        "user": {
            "type": "string",
            "create": true,
            "nullable": true,
            "minLength": 1
        },
        "publishAllPorts": {
            "type": "boolean",
            "default": false
        },
        "privileged": {
            "type": "boolean",
            "default": "false"
        },
        "capAdd": {
            "type": "array[enum]",
            "nullable": true,
            "options" : [
                "ALL",
                "AUDIT_CONTROL",
                "AUDIT_WRITE",
                "BLOCK_SUSPEND",
                "CHOWN",
                "DAC_OVERRIDE",
                "DAC_READ_SEARCH",
                "FOWNER",
                "FSETID",
                "IPC_LOCK",
                "IPC_OWNER",
                "KILL",
                "LEASE",
                "LINUX_IMMUTABLE",
                "MAC_ADMIN",
                "MAC_OVERRIDE",
                "MKNOD",
                "NET_ADMIN",
                "NET_BIND_SERVICE",
                "NET_BROADCAST",
                "NET_RAW",
                "SETFCAP",
                "SETGID",
                "SETPCAP",
                "SETUID",
                "SYSLOG",
                "SYS_ADMIN",
                "SYS_BOOT",
                "SYS_CHROOT",
                "SYS_MODULE",
                "SYS_NICE",
                "SYS_PACCT",
                "SYS_PTRACE",
                "SYS_RAWIO",
                "SYS_RESOURCE",
                "SYS_TIME",
                "SYS_TTY_CONFIG",
                "WAKE_ALARM"
            ]
        },
        "capDrop": {
            "type": "array[enum]",
            "nullable": true,
            "options" : [
                "ALL",
                "AUDIT_CONTROL",
                "AUDIT_WRITE",
                "BLOCK_SUSPEND",
                "CHOWN",
                "DAC_OVERRIDE",
                "DAC_READ_SEARCH",
                "FOWNER",
                "FSETID",
                "IPC_LOCK",
                "IPC_OWNER",
                "KILL",
                "LEASE",
                "LINUX_IMMUTABLE",
                "MAC_ADMIN",
                "MAC_OVERRIDE",
                "MKNOD",
                "NET_ADMIN",
                "NET_BIND_SERVICE",
                "NET_BROADCAST",
                "NET_RAW",
                "SETFCAP",
                "SETGID",
                "SETPCAP",
                "SETUID",
                "SYSLOG",
                "SYS_ADMIN",
                "SYS_BOOT",
                "SYS_CHROOT",
                "SYS_MODULE",
                "SYS_NICE",
                "SYS_PACCT",
                "SYS_PTRACE",
                "SYS_RAWIO",
                "SYS_RESOURCE",
                "SYS_TIME",
                "SYS_TTY_CONFIG",
                "WAKE_ALARM"
            ]
        },
        "dns": {
            "type": "array[string]",
            "nullable": true
        },
        "dnsSearch": {
            "type": "array[string]",
            "nullable": true
        },
        "instanceLinks": {
            "type": "map[reference[instance]]",
            "create": true,
            "nullable": true,
            "includeInList": false
        },
        "domainName": {
            "type": "string",
            "nullable": true
        },
        "memorySwap": {
            "type": "int",
            "nullable": true
        },
        "memory": {
            "type": "int",
            "nullable": true
        },
        "cpuSet": {
            "type": "string",
            "nullable": true
        },
        "cpuShares": {
            "type": "int",
            "nullable": true
        },
        "stdinOpen": {
            "type": "boolean",
            "default": false
        },
        "tty": {
            "type": "boolean",
            "default": false
        },
        "entryPoint": {
            "type": "array[string]",
            "nullable": true
        },
        "lxcConf": {
            "type": "map[string]",
            "nullable": true       
        },
        "restartPolicy":{
            "type": "restartPolicy",
            "nullable": true
        },
        "devices":{
            "type":"array[string]",
            "nullable": true
        },
        "registryCredentialId":{
            "type":"reference[registryCredential]"
        },
        "labels": {
            "type": "map[string]",
            "create": true
        },
        "healthCheck": {
            "type": "instanceHealthCheck",
            "nullable": true
        },
        "healthState": {
            "type": "enum",
            "options" : [ "healthy", "unhealthy", "updating-healthy", "updating-unhealthy", "initializing" ]
        },
        "securityOpt": {
            "type": "array[string]",
            "nullable": true
        },
        "logConfig": {
            "type": "logConfig",
            "nullable": true
        },
        "pidMode": {
            "type": "enum",
            "options": [
                "host"
            ],
            "nullable": true
        },
        "extraHosts": {
            "type": "array[string]",
            "nullable": true
        },
        "readOnly": {
            "type": "boolean",
            "default": false
        },
        "build": {
            "type": "dockerBuild",
            "nullable": true
        },
        "dataVolumeMounts": {
            "type": "map[reference[volume]]",
            "nullable": true
        }
    },
    "resourceActions": {
        "logs": {
            "input":"containerLogs",
            "output":"hostAccess",
            "attributes": {
                "states": [ "running", "stopped", "stopping" ]
            }
        },
        "setlabels": {
            "input": "setLabelsInput",
            "output": "container"
        }
    }
}
