{
    "resourceFields": {
        "environmentId":{
            "type": "reference[environment]",
            "required": true,
            "nullable": false
        },
        "scale": {
            "type": "int",
            "required": false,
            "nullable": false,
            "default": 1,
            "min": 0,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "desiredScale": {
            "type": "int",
            "required": false,
            "nullable": false
        },
        "lockedScale": {
            "type": "int",
            "required": false,
            "nullable": false
        },
        "currentScale": {
            "type": "int",
            "required": false,
            "nullable": false
        },
        "scalePolicy": {
            "type": "scalePolicy",
            "required": false,
            "nullable": true,
            "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "name":{
            "required": true,
            "validChars": "a-zA-Z0-9-",
            "minLength": 1,
            "maxLength": 63
        },
        "launchConfig": {
            "type": "launchConfig",
            "create": true,
            "required": false,
            "nullable": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "upgrade": {
            "type": "serviceUpgrade",
            "create": false,
            "required": false,
            "nullable": true
        },
        "restart": {
            "type": "serviceRestart",
            "create": false
        },
        "secondaryLaunchConfigs": {
            "type": "array[secondaryLaunchConfig]",
            "create": true,
            "required": false,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "metadata": {
            "type": "map[json]",
            "create": true,
            "required": false,
            "nullable": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "fqdn":{
            "type": "string",
            "required": false,
            "nullable": true
        },
        "publicEndpoints":{
            "type": "array[publicEndpoint]",
            "required": false,
            "nullable": true
        },
        "retainIp": {
          "type": "boolean",
          "nullable": true,
           "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "assignServiceIpAddress": {
          "type": "boolean",
          "nullable": false,
          "default": false
        },
        "selectorLink":{
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "selectorContainer":{
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "startOnCreate": {
            "type": "boolean",
            "nullable": true,
            "default": false
        },
        "serviceIndexStrategy": {
            "type": "string",
            "required": false,
            "nullable": false
        },
        "linkedServices": {
            "type": "map[reference[service]]",
            "nullable": true
        },
        "instanceIds": {
            "type": "array[reference[instance]]",
            "nullable": true
        },
        "system": {
            "type": "boolean",
            "required": false,
            "nullable": false,
            "default": false
        },
        "lbConfig": {
            "type" : "lbTargetConfig",
            "nullable": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "executionCount": {
            "type": "int"
        },
        "executionPeriodStart": {
            "type": "date"
        },
        "batchSize": {
            "type": "int",
            "nullable": true,
            "default": 1,
            "min": 1,
            "create": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "intervalMillis": {
            "type": "int",
            "nullable": true,
            "default": 2000,
            "min": 100,
            "create": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "startFirst": {
            "type": "boolean",
            "nullable": true,
            "default": false,
            "create": true,
             "attributes" : {
                "scheduleUpdate" : true
            }
        },
        "prePullOnUpgrade": {
            "type": "boolean",
            "default": true
        }
    },
    "resourceActions" : {
        "certificate" : {
        },
        "addservicelink" : {
            "input" : "addRemoveServiceLinkInput",
            "output" : "service"
        },
        "removeservicelink" : {
            "input" : "addRemoveServiceLinkInput",
            "output" : "service"
        },
        "setservicelinks" : {
            "input" : "setServiceLinksInput",
            "output" : "service"
        },
        "upgrade" : {
            "input" : "serviceUpgrade",
            "output" : "service"
        },
        "restart" : {
            "input" : "serviceRestart",
            "output" : "service"
        },
        "cancelupgrade": {
            "output": "service",
            "attributes": {
                "states": ["upgrading", "finishing-upgrade"]
            }
        },
        "rollback" : {
            "input" : "serviceRollback",
            "output" : "service"
        },
         "garbagecollect" : {
            "output" : "service"
        }
    }
}
